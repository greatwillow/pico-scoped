{
  "name": "pico-scoped",
  "version": "1.0.0",
  "description": "Simple beautiful semantic html components with scoped styles.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json --passWithNoTests",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greatwillow/pico-scoped.git"
  },
  "keywords": [
    "css",
    "css-framework",
    "dark-mode",
    "dark-theme",
    "lightweight",
    "minimal",
    "minimalist",
    "minimalistic",
    "native-html",
    "scss-framework",
    "semantic",
    "scoped"
  ],
  "author": "Greg Denys",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/greatwillow/pico-scoped/issues"
  },
  "homepage": "https://github.com/greatwillow/pico-scoped#readme",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "jest": "^28.1.0",
    "postcss": "^8.4.14",
    "postcss-prefixwrap": "1.30.2",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.2"
  }
}
